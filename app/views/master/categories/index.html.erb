<div class="w-full">
    <div class="flex justify-between items-center">
        <h1 class="font-bold text-4xl">Categories</h1>
        <%= link_to 'New category', new_master_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>

    <div id="master_categories" class="min-w-full">
        <% @master_categories.each do |master_category| %>
            <div>
                <p class="my-5">
                    <strong class="block font-medium mb-1">Name:</strong>
                    <%= master_category.name %>
                </p>

                <p class="my-5">
                    <strong class="block font-medium mb-1">Status:</strong>
                    <%= master_category.status_id %>
                </p>

                <% if action_name != "show" %>
                    <%= link_to "Show this category", master_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
                    <%= link_to 'Edit this category', edit_master_category_path(master_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
                    <hr class="mt-6">
                <% end %>
            </div>

    <% end %>
    </div>
</div>
